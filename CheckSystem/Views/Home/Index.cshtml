@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Books</title>
    <!--link rel="stylesheet"
          type="text/css"
          href="Content/Site.css" />-->
    <!-- Подключаем Bootstrap CSS -->
    <link rel="stylesheet" href="content/bootstrap.min.css">
    <title>Книжный магазин</title>
</head>
<body>
    <!-- Подключаем jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Подключаем Bootstrap JS -->
    <script src="scripts/bootstrap.min.js"></script>
    <!-- Подключаем плагин Popper (необходим для работы компонента Dropdown и др.) -->
    <script src="scripts/umd/popper.min.js"></script>
    <!-- Подключаем Bootstrap JS -->
    <script src="scripts/bootstrap.min.js"></script>
    <button type="button" class="btn btn-primary" data-toggle="popover" title="Сообщение" data-content="Ура, Bootstrap 4 работает">Поднеси ко мне курсор</button>

    <!-- После подключения jQuery, Popper и Bootstrap JS -->
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover({ trigger: 'hover' });
        });
    </script>
    <div>
        <h3>Распродажа книг</h3>
        <table   class="table ">
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>
    <td><p><a href="/Home/Purchases">Все покупки</a></p></td>
    <td><p><a href="/Home/AllBooks">Все книги</a></p></td>
    <td><p><a href="/Home/AllAuthors">Все авторы</a></p></td>
    <td><p><a href="/Home/NewBook">Добавить книгу</a></p></td>
    <td><p><a href="/Home/NewAuthor">Добавить автора</a></p></td>




</body>
</html>