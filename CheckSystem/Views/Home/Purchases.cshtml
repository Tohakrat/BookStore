
@{
    ViewBag.Title = "Purchases";
}

<h2>Purchases</h2>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Покупки</title>
    <link rel="stylesheet"
          type="text/css"
          href="Content/Site.css" />
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>PurchaseId</p></td>
                <td><p>Person</p></td>
                <td><p>Address</p></td>
                <td><p>BookId</p></td>
                <td><p>Date</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Purchases)
            {
                <tr>
                    <td><p>@b.PurchaseId</p></td>
                    <td><p>@b.Person</p></td>
                    <td><p>@b.Address</p></td>
                    <td><p>@b.BookId</p></td>
                    <td><p>@b.Date</p></td>
                    <td></td>
                </tr>
            }
            
        </table>
    </div>
</body>
</html>
